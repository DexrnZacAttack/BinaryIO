{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "isolatedModules": true,
    "lib": ["dom", "es2020"],
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}